@model ContactSuggestion.Models.Contacts
@{
    ViewBag.Title = "Index";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div>
    @Html.LabelFor(model => model.ContactName, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.ContactName, new { htmlAttributes = new { @class = "form-control", onkeyup = "GetSenderName(this.value);", @autofocus = "autofocus" } })
        @Html.ValidationMessageFor(model => model.ContactName, "", new { @class = "text-danger" })     
    </div>
</div>
<br />
<br />

<div>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ContactName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>

        </tr>

        @foreach (var item in Model.ContactsList)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ContactName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
            </tr>
        }

    </table>
    <input type="submit" id="Submit" style="display:none;" />
</div>
}
<script type="text/javascript">
    function GetSenderName(value) {
        if (value.length > 2) {
            document.getElementById("Submit").click();
            document.getElementById("ContactName").focus();
        }
        if (value.length ==0)
        {
            document.getElementById("Submit").click();
            document.getElementById("ContactName").focus();
        }
        
    }
</script>

